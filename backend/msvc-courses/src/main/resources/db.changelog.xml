<?xml version="1.1" encoding="UTF-8" standalone="no"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">
    <changeSet id="1" author="andresdev5">
        <createTable tableName="courses">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false" unique="true"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="2" author="andresdev5">
        <createTable tableName="course_users">
            <column name="id" type="int" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="course_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="user_id" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="status" type="varchar(255)" defaultValue="ENROLLED">
                <constraints nullable="false"/>
            </column>
            <column name="enrolled_at" type="timestamp" defaultValue="NOW()">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="course_users"
                                 baseColumnNames="course_id"
                                 referencedTableName="courses"
                                 referencedColumnNames="id"
                                 constraintName="fk_course_user_course_id"
                                 onDelete="NO ACTION"
                                 onUpdate="NO ACTION"/>
    </changeSet>
</databaseChangeLog>